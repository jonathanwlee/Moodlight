<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/purple_gradient"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/modeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/modeText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Full Spectrum"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/modeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/fullSpectrum"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/startSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/transparent_button"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="start session"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout><!-- From: file:/C:/Users/jjl/Documents/GitHub/Moodlight/app/src/main/res/layout/layout_mode_3.xml -->